  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react-jsx",
    "plugins": [
      {
        "transform": "@ckitching/typescript-is/lib/transform-inline/transformer"
      }
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.json",
  ],
  "references": [
    {
      "path": "../common"
    }
  ]
}
