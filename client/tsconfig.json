{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "composite": true,
    "declarationMap": true,
    "declaration": true,
    "plugins": [
      { "transform": "@ckitching/typescript-is/lib/transform-inline/transformer" }
    ]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../common"
    }
  ]
}
